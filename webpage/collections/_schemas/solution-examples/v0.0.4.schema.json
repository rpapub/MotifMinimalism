{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rpapub.github.io/MotifMinimalism/schemas/solution-examples/v0.0.4.schema.json",
  "title": "Solution Examples",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "solution_examples": {
      "type": "object",
      "patternProperties": {
        "^[a-f0-9\\-]{36}$": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "properties": {
            "created_at": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "educational": {
              "type": "object",
              "properties": {
                "estimated_time_minutes": {
                  "type": "integer"
                },
                "goals": {
                  "type": "array"
                },
                "level": {
                  "type": "string"
                },
                "prerequisites": {
                  "type": "array"
                }
              },
              "required": [
                "estimated_time_minutes",
                "goals",
                "level",
                "prerequisites"
              ]
            },
            "publishing": {
              "type": "object",
              "properties": {
                "audience": {
                  "type": "array"
                },
                "authors": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "citation_ids": {
                  "type": "array",
                  "description": "References to external sources relevant to this solution-example. Each ID must match an entry in _data/citations.yml.",
                  "items": {
                    "type": "string"
                  }
                },
                "created_at": {
                  "type": "string"
                },
                "last_updated": {
                  "type": "string"
                },
                "render": {
                  "type": "object",
                  "properties": {
                    "layout": {
                      "type": "string"
                    },
                    "permalink": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "layout",
                    "permalink"
                  ]
                },
                "slug": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                },
                "summary": {
                  "type": "string"
                },
                "tags": {
                  "type": "array"
                },
                "title": {
                  "type": "string"
                },
                "visibility": {
                  "type": "string"
                }
              },
              "required": [
                "audience",
                "authors",
                "created_at",
                "last_updated",
                "render",
                "slug",
                "status",
                "summary",
                "tags",
                "title",
                "visibility"
              ]
            },
            "runtime_construct": {
              "type": "object",
              "properties": {
                "artifact_version": {
                  "type": "string"
                },
                "category": {
                  "type": "string"
                },
                "compatibility": {
                  "type": "string"
                },
                "design_tool_versions": {
                  "type": "array"
                },
                "edge_cases": {
                  "type": "array"
                },
                "execution_phase": {
                  "type": "string"
                },
                "inputs": {
                  "type": "string"
                },
                "observability": {
                  "type": "string"
                },
                "outputs": {
                  "type": "string"
                },
                "platform_constraints": {
                  "type": "string"
                },
                "runtime_versions": {
                  "type": "array"
                },
                "source_commit": {
                  "type": "string"
                },
                "tags": {
                  "type": "array"
                },
                "tech_stack": {
                  "type": "array"
                }
              },
              "required": [
                "artifact_version",
                "category",
                "compatibility",
                "design_tool_versions",
                "edge_cases",
                "execution_phase",
                "inputs",
                "observability",
                "outputs",
                "platform_constraints",
                "runtime_versions",
                "source_commit",
                "tags",
                "tech_stack"
              ]
            },
            "solution": {
              "type": "object",
              "properties": {
                "authors": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "description": {
                  "type": "string"
                },
                "doc_version": {
                  "type": "string"
                },
                "download_urls": {
                  "type": "array"
                },
                "name": {
                  "type": "string"
                },
                "projects": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string"
                      },
                      "project_relative_path": {
                        "type": "string"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "images": {
                        "type": "array"
                      },
                      "inputs": {
                        "type": "object",
                        "additionalProperties": true
                      },
                      "outputs": {
                        "type": "object",
                        "additionalProperties": true
                      },
                      "observations": {
                        "type": "array",
                        "items": {
                          "$ref": "../definitions/observation.schema.json"
                        }
                      }
                    },
                    "required": [
                      "description",
                      "id",
                      "name",
                      "project_relative_path",
                      "type",
                      "images"
                    ]
                  }
                },
                "solution_id": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Must match the solution_examples object key."
                },
                "studio_min_version": {
                  "type": "string"
                },
                "created_at": {
                  "type": "string"
                },
                "images": {
                  "type": "array"
                },
                "designtime_environment": {
                  "type": "object",
                  "properties": {
                    "design_tools": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "version": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "name",
                          "version"
                        ]
                      }
                    }
                  },
                  "required": [
                    "design_tools"
                  ]
                }
              },
              "required": [
                "authors",
                "description",
                "doc_version",
                "download_urls",
                "name",
                "projects",
                "solution_id",
                "studio_min_version",
                "created_at",
                "images"
              ]
            },
            "deployment": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time"
                },
                "observations": {
                  "type": "array",
                  "items": {
                    "$ref": "../definitions/observation.schema.json"
                  }
                },
                "runtime_environment": {
                  "$ref": "../definitions/runtime-environment.schema.json"
                }
              },
              "required": [
                "id",
                "timestamp",
                "runtime_environment"
              ]
            }
          },
          "required": [
            "created_at",
            "name",
            "educational",
            "publishing",
            "runtime_construct",
            "solution"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "schema_version",
    "solution_examples"
  ]
}