{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://rpapub.github.io/MotifMinimalism/schemas/definitions/observation.schema.json",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "enum": [
                "pass",
                "fail",
                "error",
                "unknown"
            ]
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "context": {
            "type": "string",
            "description": "What this observation refers to (e.g., deployment, project)."
        },
        "findings": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ]
                    }
                },
                "required": [
                    "message"
                ]
            }
        }
    },
    "required": [
        "status",
        "timestamp"
    ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "status": {
                        "enum": [
                            "fail",
                            "error"
                        ]
                    }
                }
            },
            "then": {
                "required": [
                    "findings"
                ]
            }
        }
    ]
}